<?php if(!count($posts)): ?>
    <div class="box">
        <div class="box-title"><?php echo trans('discover.@mention'); ?></div>
        <div class="box-content">
            <div class="alert alert-info"><?php echo trans('discover.no-mention'); ?></div>
        </div>
    </div>
<?php endif; ?>

<div data-offset="<?php echo \Config::get('post-per-page'); ?>" data-type="search-<?php echo $username; ?>"  id="post-list">

                <?php foreach($posts as $post): ?>
                    <?php if(Cache::has('post-'.$post->id)): ?>
                    <?php echo Cache::get('post-'.$post->id); ?>
                    <?php else: ?>
                    <?php
                    $postContent = (String) Theme::section('post.media', ['post' => $post]);
                    if (Config::get('enable-query-cache', 0)) Cache::add('post-'.$post->id, $postContent, Config::get('post-cache-time-out', 3));
                    ?>
                    <?php echo $postContent; ?>
                    <?php endif; ?>
                <?php endforeach; ?>

</div>

<?php if(count($posts)): ?>
    <a class="post-load-more" href=""><?php echo trans('post.load-more'); ?></a>
<?php endif; ?>